
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .input-field {
        max-width: 500px;
    }
    input {
        width: 100%;
        margin: 0 auto;
    }
</style>

<div class="m-3 ">
    <h1 class="text-black fw-bold text-center">Sign up !</h1>
    <div class="form-group m-3 input-field mx-auto">
        <label>Username:</label>
        <input type="text" id="usernameR" class="form-control" />
    </div>

    <div class="form-group m-3 input-field mx-auto">
        <label>Password:</label>

        <input type="password" id="passwordR" class="form-control" />
    </div>

    <div class="form-group m-3 input-field mx-auto">
        <label>Email:</label>
        <input type="email" id="emailR" class="form-control" />
    </div>

    <div class="form-group m-3 input-field mx-auto">
        <label>Name:</label>
        <input type="text" id="nameR" class="form-control" />
    </div>

    <div class="form-group m-3 input-field mx-auto">
        <label>Surname:</label>
        <input type="text" id="surnameR" class="form-control" />
    </div>

    <div class="form-group m-3 my-4 text-center">
        <button class="btn btn-primary btn-lg" id="btn-register">Register</button>
    </div>

    <div class="text-center">
        <p>
            Already have an account? <a href="/UserManagement/Login" class="text-decoration-none">Sign In</a>
        </p>
    </div>
</div>

<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/custom/User-management/register.js"></script>