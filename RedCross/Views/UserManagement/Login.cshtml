
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .input-field {
        max-width: 500px;

    }

    input {
        width: 100%;
        margin: 0 auto;
    }

</style>

<div class="m-3 d-flex w-100 h-100">
    <div class="align-self-center border-dark shadow-lg col-6 h-50">
        <h1 class="text-center text-black fw-bold m-3">Log In</h1>
        <div class="form-group m-3 input-field mx-auto">
            <label>Username:</label>
            <input type="text" id="username" class="form-control" />
        </div>

        <div class="form-group m-3 input-field mx-auto">
            <label>Password:</label>
            <input type="password" id="password" class="form-control" />
        </div>

        <div class="form-group m-3 text-center">
            <button class="btn btn-primary btn-lg" id="btn-login">Log In</button>
        </div>

    </div>
    <div class="align-self-center border-dark shadow-lg col-6 h-50" style="color:white; background-color:#363434">
        <h1 class="text-center fw-bold m-3">Don't have an account yet ?</h1>
        <h2 class="text-center m-3">Make one today !</h2>
        <div class="text-center fs-4 m-4 p-2">
            <p>Head on over to the registration page and become a member of the ever-growing Red Cross community</p>
        </div>
        <div class="form-group m-3 text-center">
            <a class="btn btn-primary btn-lg text-white btn-close-white" href="/UserManagement/Register">Register Now</a>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/custom/User-management/login.js"></script>