@model RedCross.Repository.Models.DB.EmployeeModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div>
    <h1 class="text-center m-3 fw-bold">@Model.Name's Details</h1>
    <table class="table table-striped table-bordered shadow fs-3">
        <tr class="fs-3">
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Surname</td>
            <td>@Model.Surname</td>
        </tr>
        <tr>
            <td>CUID</td>
            <td>@Model.CUID</td>
        </tr>
        <tr>
            <td>Began working on</td>
            <td>@Convert.ToDateTime(Model.AdmissionDate).ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <td>City</td>
            <td>@Model.City</td>
        </tr>
        <tr>
            <td>Qualification</td>
            <td>@Model.QualificationName</td>
        </tr>
        <tr>
            <td>Position</td>
            <td>@Model.PositionName</td>
        </tr>

    </table>

    
</div>
