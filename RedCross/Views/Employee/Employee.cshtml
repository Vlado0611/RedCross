@model RedCross.Repository.Models.DB.EmployeeModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div>
    <h1 class="text-center m-3 fw-bold">@ViewBag.Heading</h1>
    @using (Html.BeginForm("Store", "Employee", FormMethod.Post))
    {

        if (@Model != null)
        {
            @Html.HiddenFor(m => m.EmployeeID)
        }

        <div class="form-group m-3">
            <label>Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>Surname</label>
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>CUID</label>
            @Html.TextBoxFor(m => m.CUID, new { @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>Date of Admission</label>
            @Html.TextBoxFor(m => m.AdmissionDate, new { type = "date", @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>City</label>
            @Html.DropDownListFor(m => m.City, new SelectList(ViewBag.Cities, "CityName", "CityName"),
                                                    new { @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>Qualification</label>
            @Html.DropDownListFor(m => m.QualificationName, new SelectList(ViewBag.Qualifications, "QualificationName", "QualificationName"),
                                                            new { @class = "form-control" })
        </div>

        <div class="form-group m-3">
            <label>Position</label>
            @Html.DropDownListFor(m => m.PositionName, new SelectList(ViewBag.Positions, "PositionName", "PositionName"),
                                                        new { @class = "form-control" })
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary m-3 btn-lg">
                Save
            </button>
        </div>
    }

</div>

