
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div>
    <h1 class="text-center fw-bold m-3">Actions Page</h1>
    <div class="container">
        <div class="d-flex">
            <div class="justify-content-lg-start w-25">
                <a href="/Action/Create" class="btn btn-secondary mb-3 admin-options btn-lg">Add New</a>
            </div>
            <div class="m-3 input-field d-flex justify-content-center col-6">
                <input type="text" style="max-width: 600px" id="search" placeholder="Search" class="form-control" />
            </div>
        </div>
        <table class="table table-striped table-bordered shadow fs-5" id="searchTable">
            <tr>
                <th>Beneficiary Name</th>
                <th>Beneficiary Surame</th>
                <th>Volunteer Name</th>
                <th>Volunteer Surname</th>
                <th>Title</th>
                <th>Date</th>
                <th class="admin-options">Edit</th>
                <th class="user-options">Details</th>
                <th class="admin-options">Delete</th>
            </tr>

            @foreach (var item in ViewBag.Actions)
            {
                <tr class="searchTr">
                    <td>@item.BeneficiaryName</td>
                    <td>@item.BeneficiarySurname</td>
                    <td>@item.VolunteerName</td>
                    <td>@item.VolunteerSurname</td>
                    <td>@item.Title</td>
                    <td>@Convert.ToDateTime(item.ActionDate).ToString("dd/MM/yyyy")</td>

                    <td class="admin-options">
                        <a href="@Url.Action("Edit", "Action", new { actionID = item.ActionID})" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                    </td>
                    <td class="user-options">
                        <a class="btn btn-success" href="/Action/ViewActionDetails/@item.ActionID"><i class="fa fa-search" aria-hidden="true"></i> Details</a>
                    </td>
                    <td class="admin-options">
                        <button class="btn btn-danger" onclick="deleteAction(@item.ActionID)"><i class="fa fa-times" aria-hidden="true"></i> Delete</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/custom/Shared/search.js"></script>
<script src="~/Scripts/custom/Action/index.js"></script>
<script src="~/Scripts/custom/Shared/admin.js"></script>
<script src="~/Scripts/custom/Shared/user.js"></script>
<script src="~/Scripts/custom/Action/index.js"></script>
